---
import Navbar from "../components/ui/Navbar.astro";
import aizen from "../assets/aizen.png";
import yama from "../assets/yama.png";
import kenpachi from "../assets/kenpachi.png";
import shunsui from "../assets/shunsui.png";
import old from "../assets/old.png";
import Image from "astro/components/Image.astro";
import { FaX, FaDiscord, FaInstagram } from "react-icons/fa6";
---

<style>
  main {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
   
  }
  .mini-nav {
    display: flex;
    justify-content: flex-end;
    margin: 20px;
    padding: 10px;
    
  }
  ul {
    list-style: none;
    display: flex;
    gap: 20px;
    align-items: center;
    justify-content: flex-end;
    text-align: right;
  }
  li {
    color: black;
    background-color: white;
    cursor: pointer;
    padding: 0.3rem;
    border-radius: 50%;
  }
</style>

<main>
  <section class="mini-nav">
    <ul>
      <li><FaX size={28} /></li>
      <li><FaDiscord size={28} /></li>
      <li><FaInstagram size={28} /></li>
    </ul>
  </section>
  <Navbar />
  <section>
    <h1>Bored Shinigamiz</h1>
    <p>The first ever anime inspired NFT collection on Solana.</p>
    <button>Mint Now</button>
  </section>

